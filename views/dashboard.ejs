<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
            color: #333;
        }

        /* Header */
        header {
            background-color: #1e2a38;
            color: #fff;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        header h1 {
            font-size: 2em;
            margin-bottom: 10px;
        }

        /* Main */
        main {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* User Details */
        .user-details {
            background: #fff;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .user-details h2 {
            font-size: 1.8em;
            margin-bottom: 20px;
            color: #1e2a38;
        }

        .user-details p {
            font-size: 1em;
            margin-bottom: 15px;
            color: #555;
        }

        /* Events Section */
        .events {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        /* Event Box */
        .event-box {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: calc(33.333% - 20px);
            margin-bottom: 20px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .event-box:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        /* Event Image */
        .event-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-bottom: 3px solid #1e2a38;
        }

        /* Event Info */
        .event-info {
            padding: 20px;
        }

        .event-info h3 {
            margin-bottom: 15px;
            font-size: 1.4em;
            color: #1e2a38;
        }

        .event-info p {
            font-size: 0.9em;
            margin-bottom: 10px;
            color: #666;
        }

        /* Footer */
        footer {
            background-color: #1e2a38;
            color: #fff;
            text-align: center;
            padding: 15px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }

        footer p {
            font-size: 0.9em;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .event-box {
                width: calc(50% - 20px);
            }
        }

        @media (max-width: 480px) {
            .event-box {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome <%= user.name %>! This is your Dashboard</h1>
    </header>

    <main>
        <div class="user-details">
            <h2>User Details</h2>
            <p><strong>Name:</strong> <%= user.name %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
        </div>
        
        <h2>Your Registered Events</h2>
        <div class="events">
            <% registrations.forEach(registration => { %>
                <div class="event-box">
                    <img src="/uploads/<%= registration.event_image %>" alt="<%= registration.event_name %>" class="event-image">
                    <div class="event-info">
                        <h3><%= registration.event_name %></h3>
                        <p><strong>Category:</strong> <%= registration.category %></p>
                        <p><strong>Date:</strong> <%= registration.registration_date.toISOString().split('T')[0] %></p>
                        <p><strong>Description:</strong> <%= registration.purpose %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 @MIT WPU. All rights reserved.</p>
    </footer>
</body>
</html>
