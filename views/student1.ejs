}

.eventContainer h2 {
    text-align: center;
    margin-bottom: 30px;
}

.event-slider {
    width: 100%;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
}

.event-list {
    display: flex;
    transition: transform 0.5s ease-in-out;
}

.event-item {
    flex: 0 0 100%;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin: 0 10px;
    transition: transform 0.3s ease;
}

.event-item:hover {
    transform: translateY(-5px);
}

.card_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.event-image {
    width: 300px;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    margin-bottom: 20px;
}

.event-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.event-details {
    text-align: center;
}

.event-details h3 {
    margin-bottom: 10px;
    font-size: 24px;
    color: #333;
}

.event-details p {
    margin-bottom: 10px;
    font-size: 16px;
    color: #666;
}

.register-button {
    display: inline-block;
    background-color: #0055A4;
    color: #ffffff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
    transition: background-color 0.3s;
    border: none;
    cursor: pointer;
}

.register-button:hover {
    background-color: #003d7a;
}

.filters {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    flex-wrap: wrap;
}

.filters button {
    background: #007bff;
    color: #fff;
    border: none;
    padding: 15px 40px;
    border-radius: 21px;
    margin: 0 5px;
    cursor: pointer;
    transition: transform 0.3s, background-color 0.3s;
    font-size: 18px;
}

.filters button:hover {
    background: #0056b3;
    transform: scale(1.1);
}

#prevBtn,
#nextBtn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    font-size: 18px;
    border-radius: 50%;
    transition: background-color 0.3s;
}

#prevBtn:hover,
#nextBtn:hover {
    background-color: rgba(0, 0, 0, 0.7);
}

#prevBtn {
    left: 10px;
}

#nextBtn {
    right: 10px;
}

.slider-dots {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
}

.slider-dot {
    width: 10px;
    height: 10px;
    background-color: #bbb;
    border-radius: 50%;
    margin: 0 5px;
    cursor: pointer;
}

.slider-dot.active {
    background-color: #0055A4;
}

@media (max-width: 768px) {
    .event-image {
        width: 100%;
        height: auto;
    }

    .filters button {
        font-size: 14px;
        padding: 8px 16px;
    }
}

/* Rules section styles */
#rules {
    padding: 50px 20px;
    background-color: #f9f9f9;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    /* height: ; */
    border-radius: 10px;

}

.Rulecontainer {
    max-width: 1200px;
    margin: 0 auto;
}

.rules-heading {
    margin-bottom: 30px;
    color: #333;
    font-size: 24px;
    text-transform: uppercase;
    text-align: center;
}

.rules-boxes {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
}

.rule-box {
    border: 2px solid #ccc;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.rule-box h3 {
    margin-bottom: 10px;
    font-size: 18px;
    color: #333;
    border-bottom: 2px solid #ddd;
    padding-bottom: 10px;
}

.rule-box p {
    font-size: 14px;
    color: #666;
}

.faq-container {
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    width: 100%;
    /* max-width: 1200px; Adjust the max-width as needed */
    margin: 0 auto;
    /* Centers the container horizontally */
}

h1 {
    font-size: 1.8em;
    margin-bottom: 20px;
    text-align: center;
    color: #333;
}

.faq {
    margin-bottom: 10px 0;
}

.faq-question {
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 15px;
    background-color: #f1f1f1;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin: 0;
    transition: background-color 0.3s;
    justify-content: space-between;
}

.faq-question:hover {
    background-color: #e0e0e0;
}

h3{
        display: block;
        font-size: 1.17em;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        font-weight: bold;
        unicode-bidi: isolate;
    
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    padding: 0 15px;
    border-top: 1px solid #ddd;
    background-color: #fafafa;
    border-radius: 0 0 4px 4px;
    transition: max-height 0.5s ease-out, padding 0.5s ease-out;
}

.faq-answer p {
    margin: 15px 0;
}

.faq-question.active+.faq-answer {
    max-height: 200px;
    /* Adjust as needed */
    padding: 15px;
}

@media (max-width: 768px) {
    #rules {
        padding: 30px 10px;
    }

    .rules-heading {
        font-size: 20px;
    }

    .rules-boxes {
        grid-template-columns: 1fr;
    }

    .rule-box {
        width: 100%;
    }
}


