<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Registration</title>
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --accent-color: #e74c3c;
            --background-color: #ecf0f1;
            --text-color: #34495e;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        h1 {
            color: var(--primary-color);
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .event-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 2rem;
            transition: transform 0.3s ease;
        }

        .event-card:hover {
            transform: translateY(-5px);
        }

        .event-image-container {
            position: relative;
            overflow: hidden;
            height: 300px;
        }

        .event-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 10%;
            box-sizing: border-box;
            transition: transform 0.3s ease;
        }

        .event-details, .registration-form {
            padding: 2rem;
        }

        h2 {
            color: var(--secondary-color);
            font-size: 1.8rem;
            margin-bottom: 1rem;
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 0.5rem;
        }

        .event-date {
            background-color: var(--accent-color);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            display: inline-block;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .event-date span {
            display: block;
            margin-bottom: 0.3rem;
        }

        .speaker-details {
            margin-top: 1rem;
            padding: 1rem;
            background-color: var(--background-color);
            border-left: 4px solid var(--primary-color);
            border-radius: 5px;
        }

        .speaker-details h3 {
            color: var(--accent-color);
            margin-bottom: 0.5rem;
        }

        form {
            display: grid;
            gap: 1rem;
        }

        label {
            font-weight: bold;
            color: var(--secondary-color);
        }

        input, select {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        input:focus, select:focus {
            outline: none;
            border-color: var(--primary-color);
        }

        button {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 1rem;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.1s ease;
        }

        button:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
        }

        button:active {
            transform: translateY(0);
        }

        @media (min-width: 768px) {
            .event-card {
                display: flex;
            }

            .event-details, .registration-form {
                flex: 1;
            }
        }

        input[readonly], select[readonly] {
            background-color: #f0f0f0;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Event Registration</h1>
        <div class="event-card">
            <div class="event-details">
                <h2><%= event.name %></h2>
                <div class="event-date">
                    <span id="startDate"></span>
                    <span id="endDate"></span>
                </div>
                <div class="event-image-container">
                    <% if (event.image) { %>
                        <img src="<%= event.image %>" alt="Event Image" class="event-image">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </div>
                <p><strong>Description:</strong> <%= event.description %></p>
                <div class="speaker-details">
                    <h3>Speaker: <%= name %></h3>
                    <p><strong>Bio:</strong> <%= event.speaker_bio %></p>
                </div>
            </div>
            <div class="registration-form">
                <h2>Register Now</h2>
                <% if (typeof success !== 'undefined' && success === 1) { %>
                    <div style="color: green; text-align: center;">Registration successful!</div>
                <% } %>
                <form id="registration-form" action="/registerEvent" method="POST" onsubmit="return validateForm()">
                    <input type="hidden" name="event_id" value="<%= event.id %>">
                    <input type="hidden" name="event_name" value="<%= event.name %>">
                    <input type="hidden" name="event_image" value="<%= event.image %>">
                    
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required value="<%= name %>" readonly>
                    
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required value="<%= email %>" readonly>
                    
                    <label for="category">Category</label>
                    <select id="category" name="category" required readonly>
                        <option value="<%= category %>" selected><%= category %></option>
                    </select>
                    
                    <label for="role">Role</label>
                    <input type="text" id="role" name="role" required>
                    
                    <label for="purpose">Purpose</label>
                    <select id="purpose" name="purpose" required>
                        <option value="participant">Participant</option>
                        <option value="speaker">Speaker</option>
                        <option value="volunteer">Volunteer</option>
                    </select>
                    
                    <button type="submit">Register</button>
                </form>

                <div id="message-container"></div>
            </div>
        </div>
    </div>

    <script>
        function formatDate(dateString) {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };
            return new Date(dateString).toLocaleDateString('en-US', options);
        }

        document.getElementById('startDate').textContent = 'Start: ' + formatDate('<%= event.start_date %>');
        document.getElementById('endDate').textContent = 'End: ' + formatDate('<%= event.end_date %>');

        function validateForm() {
            const role = document.getElementById('role').value;
            if (!role.trim()) {
                alert('Please enter your role.');
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
